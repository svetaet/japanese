{
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "ESNext",
		"jsx": "react",
		"noEmit": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": { "*": ["*", "client/*", "server/*"] },
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"include": ["src", "test"]
}
